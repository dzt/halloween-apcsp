<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_track"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/artwork"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp" />

    <TextView
        android:id="@+id/artist"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="-5dp"
        android:layout_toEndOf="@+id/artwork"
        android:text="by Who"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/trackName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/artwork"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Song Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view2"
        android:layout_width="100dp"
        android:layout_height="99dp"
        android:layout_alignStart="@+id/artwork"
        android:layout_alignTop="@+id/artwork"
        android:background="#48000000" />

    <TextView
        android:id="@+id/rank"
        android:layout_width="100dp"
        android:layout_height="46dp"
        android:layout_alignEnd="@+id/artwork"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#d07e25"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="1" />

    <View
        android:id="@+id/view3"
        android:layout_width="201dp"
        android:layout_height="31dp"
        android:layout_alignBottom="@+id/artwork"
        android:layout_alignStart="@+id/artist" />

    <Button
        android:id="@+id/open"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/artist"
        android:layout_alignTop="@+id/view3"
        android:background="#3ece5a"
        android:text="Opn in Spotify"
        android:textColor="#fff" />

</RelativeLayout>